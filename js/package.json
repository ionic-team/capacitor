{
  "name": "@avocadojs/core",
  "version": "1.0.0",
  "description": "Avocado: The universal App container",
  "homepage": "https://ionicframework.com",
  "author": "Ionic Team <hi@ionic.io> (https://ionicframework.com) ",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run clean && npm run transpile-no-helpers && npm run rollup && npm run minify && npm run transpile",
    "clean": "rimraf dist",
    "minify": "uglifyjs --mangle --compress --source-map \"content='dist/avocado.js.map',url='avocado.js.map'\" --comments '/^/*!/' --output dist/avocado.js dist/avocado.js",
    "rollup": "rollup --config rollup.config.js",
    "transpile": "tsc --module ES2015 --target ES5 --outDir dist/esm",
    "transpile-no-helpers": "tsc --module ES2015 --target ES5 --noEmitHelpers true --outDir dist/esm"
  },
  "main": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "devDependencies": {
    "rimraf": "^2.6.1",
    "rollup": "^0.52.0",
    "tslint": "^5.6.0",
    "tslint-ionic-rules": "0.0.8",
    "typescript": "^2.6.2",
    "uglify-js": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/avocado-js.git"
  },
  "bugs": {
    "url": "https://github.com/ionic-team/avocado-js/issues"
  }
}
